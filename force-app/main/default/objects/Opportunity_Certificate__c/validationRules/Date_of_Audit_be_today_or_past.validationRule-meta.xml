<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Date_of_Audit_be_today_or_past</fullName>
    <active>true</active>
    <errorConditionFormula>AND(Date_of_Audit__c  &gt;  TODAY(),$Profile.Name != &apos;SCS Integration&apos;)</errorConditionFormula>
    <errorDisplayField>Date_of_Audit__c</errorDisplayField>
    <errorMessage>Date of Audit should be either Today or Past date. It can not be a future date.</errorMessage>
</ValidationRule>
